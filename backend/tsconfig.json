{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types",
      // "custom_typings"
    ]
  },
  "include": [
    "routes/**/*.ts",
    "interfaces/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
